<div class="scrollInf ventana_genero" id="ventana_menu">

    <div class="card  ">
        <div class="">

            <h4 class="txtblack" id="nombre">Usuario</h4>
        </div>
        <div class="card-body">



            {{#if user}}
            <div class="dropdown-divider"></div>
            <div class="list-group">
                <a href="/perfil" class="list-group-item list-group-item-action disabled">Perfil</a>               
                <a href="/logout" class="list-group-item list-group-item-action disabled">Cerra Sesion</a>
            </div>
            {{else}}
            <div class="dropdown-divider"></div>
            <div class="text-center contenedor_genero">
                <a href="/iniciar">
                    <img src="img/buton.png" class="rounded imagen_genero" alt="...">
                    <div class="centrado_genero">Iniciar Sesion</div>
                </a>
            </div>

            <div class="dropdown-divider"></div>
            <div class="text-center contenedor_genero">
                <a href="/registrar">
                    <img src="img/buton.png" class="rounded imagen_genero" alt="...">
                    <div class="centrado_genero">Registrarse</div>
                </a>
            </div>
            {{/if}}
        </div>

    </div>
</div>





<div class="scrollInf ventana_genero" id="ventana_genero">
    <div class="card  ">
        <div class="">
            <h4 class="txtblack" id="nombre">Genero</h4>
        </div>
        <div class="card-body">
            <div class="dropdown-divider"></div>

            <div class="list-group">
                <a href="/peliculas" class="list-group-item list-group-item-action disabled">Todos</a>
                {{#each genero}}
                <a href="/peliculas?genero={{genero}}"
                    class="list-group-item list-group-item-action disabled">{{genero}}</a>
                {{/each}}
            </div>


        </div>

    </div>
</div>