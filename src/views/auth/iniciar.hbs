<div class="container p-3">
  <div class="row">

    <div class=" mx-auto caja-ancho">
      <div class="card text-center">
        <div class="card-header">
          <h1 >Ingrese su cuenta</h1>
        </div>
        <img src="/img/logo.png" alt="Logo Fazt" class="card-img-top mx-auto m-2 rounded-circle w-50">
        <div class="card-body">
          <form id="iniciar"  action="javascript:iniciar() " method="POST">
            <div class="form-group">
              <input type="text" name="usuario" placeholder="Usuario" class="form-control campo-alto" autofocus>
            </div>
            <div class="form-group">
              <input type="password" name="contraseña" placeholder="Contraseña" class="form-control campo-alto">
            </div>
            
            <button  class="btn btn-primary btn-block campo-alto">
              Ingresar
            </button>
            
          </form>

            <div class="dropdown-divider"></div>
            <div class="text-center contenedor_genero">
                <a href="javascript:mostrar_getNombre()">
                    <img src="img/buton.png" class="rounded imagen_genero" alt="...">
                    <div class="centrado_genero">Iniciar como visitante</div>
                </a>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>

